{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
}
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
