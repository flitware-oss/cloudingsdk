{
  "compilerOptions": {
    "target": "ES2022",
    "strict": true,
    "declaration": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "node10",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "outDir": "./lib",
    "paths": {}
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts"]
}
